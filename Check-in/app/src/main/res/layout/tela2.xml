<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fazer o cadastro"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:onClick="passatela3"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="acomodacoes "
            android:id="@+id/textView6"
            android:textSize="20dp"
            android:textColor="@color/accent_material_light"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/altura_image"
                android:id="@+id/imageView1"
                android:layout_weight="1"
                android:src="@drawable/quarto1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/altura_image"
                android:id="@+id/imageView2"
                android:layout_weight="1"
                android:src="@drawable/banheiro1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/altura_image"
                android:id="@+id/imageView3"
                android:layout_weight="1"
                android:src="@drawable/quarto4" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/altura_image"
                android:id="@+id/imageView4"
                android:layout_weight="1"
                android:src="@drawable/banheiro4" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/altura_image"
                android:id="@+id/imageView5"
                android:layout_weight="1"
                android:src="@drawable/restaurante" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="@dimen/altura_image"
                android:id="@+id/imageView6"
                android:layout_weight="1"
                android:src="@drawable/pixina" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>